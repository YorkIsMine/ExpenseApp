<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/change_settings"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/currency"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_tv_title" />

    <RadioButton
        android:id="@+id/settings_rb_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:checked="true"
        android:text="@string/usd"
        app:layout_constraintStart_toEndOf="@+id/settings_tv_currency"
        app:layout_constraintTop_toTopOf="@+id/settings_tv_currency" />

    <RadioButton
        android:id="@+id/settings_rb_rub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/rub"
        app:layout_constraintStart_toEndOf="@+id/settings_rb_usd"
        app:layout_constraintTop_toTopOf="@+id/settings_rb_usd" />

    <RadioButton
        android:id="@+id/settings_rb_eur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/eur"
        app:layout_constraintStart_toEndOf="@+id/settings_rb_rub"
        app:layout_constraintTop_toTopOf="@+id/settings_rb_rub" />

    <RadioButton
        android:id="@+id/settings_rb_yen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/yen"
        app:layout_constraintStart_toEndOf="@+id/settings_rb_eur"
        app:layout_constraintTop_toTopOf="@+id/settings_rb_eur" />

</androidx.constraintlayout.widget.ConstraintLayout>